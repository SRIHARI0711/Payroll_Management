{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Java Project",
            "type": "shell",
            "command": "javac",
            "args": [
                "-d",
                "classes",
                "-cp",
                "lib/*;.",
                "src/config/*.java",
                "src/models/*.java", 
                "src/utils/*.java",
                "src/dao/*.java",
                "src/gui/*.java",
                "src/main/*.java"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$javac"
        },
        {
            "label": "Run Payroll Management System",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                "classes;lib/*",
                "main.PayrollManagementSystem"
            ],
            "group": "test",
            "dependsOn": "Compile Java Project",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "rmdir",
            "args": [
                "/s",
                "/q",
                "classes"
            ],
            "windows": {
                "command": "rmdir",
                "args": [
                    "/s",
                    "/q",
                    "classes"
                ]
            },
            "linux": {
                "command": "rm",
                "args": [
                    "-rf",
                    "classes"
                ]
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}